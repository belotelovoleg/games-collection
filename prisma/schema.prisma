  // Relations
  platforms IgdbPlatform[]

  @@map("igdb_platform_families")
}

model IgdbPlatformType {
  id              Int      @id // IGDB ID directly
  checksum        String?
  name            String

  // Relations
  platforms IgdbPlatform[]

  @@map("igdb_platform_types")
}

