// IGDB Release Date normalization
model IgdbReleaseDate {
  id           Int      @id // IGDB ID directly
  checksum     String?  @map("checksum")
  createdAt    BigInt?  @map("created_at")
  date         BigInt?  @map("date") // Unix timestamp
  dateFormatId Int?     @map("date_format_id") // Reference to Date Format
  gameId       Int?     @map("game_id") // Reference to Game
  human        String?  @map("human") // Human readable date
